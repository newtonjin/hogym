<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExecutaTreinoActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/txtExecNome"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="64dp"
        android:text="Nome do Exercicio"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtExecRep"
        android:layout_width="80dp"
        android:layout_height="49dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="156dp"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtExecNome" />

    <TextView
        android:id="@+id/txtExecTempo"
        android:layout_width="81dp"
        android:layout_height="49dp"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="53dp"
        android:text="Tempo"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnProx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btnProx"
        android:layout_width="76dp"
        android:layout_height="72dp"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_offline_pin_black_24dp" />
</android.support.constraint.ConstraintLayout>